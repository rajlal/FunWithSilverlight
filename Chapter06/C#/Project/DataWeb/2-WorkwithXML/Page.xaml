<UserControl x:Class="WorkwithXML.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="#EEEEEE" Width="400" Height="300" >
        <Canvas Background="AliceBlue" Width="300" Height="200" >
            <TextBlock Text="Work with XML" Canvas.Top="10" Canvas.Left="10" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24">
            </TextBlock>
            <TextBlock Canvas.Top="50" Canvas.Left="20">
                o   XML Reader  <LineBreak />
                o   XML Writer <LineBreak />
                o	XLinq: XDocument, XElement, etc <LineBreak />
                o	XML Serializer <LineBreak />        
            </TextBlock>
        </Canvas>
    </Grid>
</UserControl>
