<UserControl xmlns:basics="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"  x:Class="CommonControls.TestPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="200" Height="200" >
    <Border BorderThickness="5" BorderBrush="Silver" CornerRadius="4" >
        <Grid x:Name="LayoutRoot" Background="#EEEEEE" Width="400" Height="300" ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
           
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
             
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" FontSize="16" Grid.Column="0" Text="New Popup Page" HorizontalAlignment="Center"  VerticalAlignment="Center" />
            </Grid>
    </Border>

</UserControl>
