<UserControl x:Class="_1_HelloASP.Server"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300">
    <Grid x:Name="LayoutRoot" Background="#EEEEEE" Width="400" Height="300" >
            <Canvas Background="AliceBlue" Width="300" Height="200" >
            <TextBlock Text="Silverlight (Server Code)" Canvas.Top="10" Canvas.Left="20" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="22">
            </TextBlock>
                <TextBlock Canvas.Top="50" Canvas.Left="30">
            LanguageIs ".vb"<LineBreak />        
            param name = source<LineBreak />
            value = asp:Literal <LineBreak />
            runat = server<LineBreak />
            </TextBlock>
        </Canvas>
        </Grid>  
</UserControl>
