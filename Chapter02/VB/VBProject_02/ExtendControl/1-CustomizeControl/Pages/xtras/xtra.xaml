<UserControl x:Class="CustomizeControl.xtra"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="White" >
        <Border x:Name="LoginBox" BorderBrush="Gray" Background="White" BorderThickness="1" CornerRadius="5" Width="316" Height="280" >
            <StackPanel x:Name="StackLayout"  VerticalAlignment="Center" >
                <Image Source="images/lf.png" Width="286"></Image>
                <Border BorderBrush="AliceBlue" Background="AliceBlue" BorderThickness="1" CornerRadius="5" Width="286" Margin="8">
                    <StackPanel x:Name="Login" Width="286" Margin="4" VerticalAlignment="Center" >
                    <TextBlock TextAlignment="Center" Text="Username"></TextBlock>
                    <TextBox Margin="5" Width="260" Height="35"></TextBox>
                    <TextBlock TextAlignment="Center" Text="Password"></TextBlock>
                    <TextBox VerticalAlignment="Center" Margin="5" Width="260" Height="35"></TextBox>
                    <TextBlock Text=" " Height="2"></TextBlock>
                    <Button Width="260" Height="35" Margin="5" Content="Login" ></Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
