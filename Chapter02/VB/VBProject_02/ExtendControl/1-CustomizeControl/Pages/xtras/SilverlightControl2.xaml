<UserControl x:Class="CustomizeControl.SilverlightControl2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Height="300">
    <StackPanel xmlns:vsm="clr-namespace:System.Windows;assembly=System.Windows" 
               HorizontalAlignment="Center" VerticalAlignment="Center"  >

        <TextBlock FontSize="20" Text="Buttons with a custom ControlTemplate" HorizontalAlignment="Center"/>
        <TextBlock Text="This sample demonstrates a custom ControlTemplate for a Button." HorizontalAlignment="Center"
               TextWrapping="Wrap"/>
        <Button Style="{StaticResource newTemplate}" 
            Content="Button1"/>

        
    </StackPanel>
</UserControl>
