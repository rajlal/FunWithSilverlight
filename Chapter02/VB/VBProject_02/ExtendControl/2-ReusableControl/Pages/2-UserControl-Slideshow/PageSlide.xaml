<UserControl x:Class="ReusableControl.PageSlide"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:cc="clr-namespace:ReusableControl;assembly=ReusableControl"
    Width="400" Height="300">
    <Canvas x:Name="LayoutRoot" Background="#EEEEEE"  Width="400" Height="300" >
            <cc:Slide x:Name="tn1" SlideWidth="400" SlideHeight="300" MainTitle="1 / 6"  MainImage="Images/Dock.jpg" CurrentSlide="0">
                <cc:Slide.DataContext>
                    <cc:SlideImagesList Capacity="5">
                    <cc:Slides ImageUri="Images/Dock.jpg"></cc:Slides>
                    <cc:Slides ImageUri="Images/Creek.jpg"></cc:Slides>
                    <cc:Slides ImageUri="Images/Forest.jpg"></cc:Slides>
                    <cc:Slides ImageUri="Images/Garden.jpg"></cc:Slides>
                    <cc:Slides ImageUri="Images/Tree.jpg"></cc:Slides>
                    <cc:Slides ImageUri="Images/Waterfall.jpg"></cc:Slides>
                    </cc:SlideImagesList>
                </cc:Slide.DataContext>
            </cc:Slide>
    </Canvas>
</UserControl>
