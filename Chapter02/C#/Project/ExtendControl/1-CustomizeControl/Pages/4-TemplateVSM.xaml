<UserControl x:Class="CustomizeControl.PageTemplateVSM"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Style="{StaticResource BackgroundStyle}">
            <Border x:Name="LoginBox" Style="{StaticResource BorderStyle}" >
                <StackPanel x:Name="StackLayout" Style="{StaticResource StackStyle}">
                <Button x:Name="VistaButton" Style="{StaticResource TemplateVSM}" Content="Button1"/>
                <Button x:Name="Disable" Content="Disable" Width="100" Margin="16" Click="Button_Click"></Button>
                   <TextBlock HorizontalAlignment="Center" Text="Custom Vista button with different states"></TextBlock>
            </StackPanel>
            </Border>
    </Grid>
</UserControl>
    
