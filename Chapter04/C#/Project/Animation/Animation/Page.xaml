<UserControl x:Class="Animation.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="#EEEEEE" Width="400" Height="300" >
        <Canvas Background="AliceBlue" Width="300" Height="200" >
            <TextBlock Text="Animation" Canvas.Top="10" Canvas.Left="20" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24">
        </TextBlock>
        <TextBlock Canvas.Top="50" Canvas.Left="30">
            Double Animation<LineBreak />Point Animation  
		   <LineBreak />Color Animation  
            <LineBreak />Keyframe / Timer
		<LineBreak />Transform Animation
		<LineBreak />Splined Interpolation
  		<LineBreak />Use HitTest in Animation
        </TextBlock>

        </Canvas>
    </Grid>
</UserControl>
