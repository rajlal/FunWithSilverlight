<UserControl x:Class="Transformation.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">

    <Canvas x:Name="LayoutRoot" Background="#EEEEEE" Width="400" Height="300" >
        <Canvas Background="AliceBlue" Width="300" Height="200" Canvas.Left="50" Canvas.Top="50">
            <TextBlock Text="Transformation" Canvas.Top="10" Canvas.Left="20" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24">
            </TextBlock>
            <TextBlock Canvas.Top="60" Canvas.Left="30"> Rotate,Scale,Skew,Translate Transform
                    <LineBreak />
		    Matrix Transform 
                    <LineBreak />
		    Flip Transform 
                    <LineBreak />
		    Center Point Transform<LineBreak /><LineBreak />
        </TextBlock>
        </Canvas>
    </Canvas>
</UserControl>
