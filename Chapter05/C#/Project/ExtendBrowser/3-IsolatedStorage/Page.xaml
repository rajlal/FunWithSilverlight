<UserControl x:Class="LocalStorage.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="#EEEEEE" Width="400" Height="300" >
        <Canvas Background="AliceBlue" Width="300" Height="200" >
            <TextBlock Text="Isolated Storage" Canvas.Top="10" Canvas.Left="20" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24">
        </TextBlock>
        <TextBlock Canvas.Top="50" Canvas.Left="30">
            Stream Based Access<LineBreak />String or Binary Data
		   <LineBreak />IsolatedStorage FileStream
             <LineBreak />Expand Isolated Storage
        </TextBlock>
        </Canvas>
    </Grid>
</UserControl>
