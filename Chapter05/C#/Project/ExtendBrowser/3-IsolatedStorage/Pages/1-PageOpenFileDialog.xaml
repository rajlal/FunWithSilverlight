<UserControl  x:Class="LocalStorage.PageOpenFileDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300" >
    <Grid x:Name="LayoutRoot" Background="#EEEEEE" Width="400" Height="300" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="250" />
        </Grid.RowDefinitions>
        <TextBlock Margin ="10" Grid.Row="0" VerticalAlignment="Center" x:Name="lblFilename" Text="Filename:" FontSize="14" />
        <Button Margin ="10" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right" Content="Open a File" FontSize="14" Click="Button_Click" Width="100" ></Button>
        <Grid Grid.Row="1" Background="AliceBlue">
            <TextBox Margin ="10" x:Name="textContainer" Visibility="Collapsed" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
        <Image  Margin ="10"  x:Name="imageContainer" Visibility="Collapsed"/>
        <MediaElement  Margin ="10"  x:Name="videoContainer" Stretch="Uniform" Visibility="Collapsed"/>
        </Grid>
    </Grid>
</UserControl>
