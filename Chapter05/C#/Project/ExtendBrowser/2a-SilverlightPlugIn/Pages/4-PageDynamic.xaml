<UserControl x:Class="SilverlightPlugIn.PageDynamic"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Border BorderBrush="DodgerBlue" BorderThickness="1">
        <Grid x:Name="LayoutRoot" Background="AliceBlue" Width="400" Height="300" >
            <Canvas Background="White" Width="300" Height="200" >
                <TextBlock x:Name="txtTitle" Text="Dynamic Silverlight Object" Canvas.Top="10" Canvas.Left="20" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18"></TextBlock>
                <TextBlock x:Name="txtParameter" FontSize="14" Canvas.Left="20" Canvas.Top="50" >Custom Parameter</TextBlock>
                <Rectangle x:Name="recParameter" Width="100" Height="100" Canvas.Left="20" Canvas.Top="80" Fill="DodgerBlue"></Rectangle>
            </Canvas>
        </Grid>
    </Border>
</UserControl>
