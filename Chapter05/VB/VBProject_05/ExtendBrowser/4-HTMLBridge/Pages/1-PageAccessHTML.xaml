<UserControl x:Class="HTMLBridge.PageAccessHTML"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="AliceBlue" Width="400" Height="300" Loaded="LayoutRoot_Loaded" >
        <Canvas Background="White" Width="300" Height="200" >
            <TextBlock x:Name="txtTitle" Text="Access Page HTML" Canvas.Top="10" Canvas.Left="20" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18"></TextBlock>
            <StackPanel Orientation="Horizontal"  Canvas.Left="20" Canvas.Top="40" >
                <TextBlock  FontSize="11"  Margin="2" HorizontalAlignment="Left" Width="115"><Run FontWeight="bold">HTML Document</Run></TextBlock>
                <TextBlock  FontSize="11" Margin="2"  HorizontalAlignment="Left" Width="185"><Run FontWeight="bold">HTML Body</Run></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal"  Canvas.Left="20" Canvas.Top="60" >
                <TextBlock x:Name="txtHTMLDocument" FontSize="11"  Margin="2" HorizontalAlignment="Left" Width="115"></TextBlock>
                <TextBlock x:Name="txtHTMLBody" FontSize="11" Margin="2"  HorizontalAlignment="Left" Width="185"></TextBlock>
            </StackPanel>
        </Canvas>
    </Grid>
</UserControl>
