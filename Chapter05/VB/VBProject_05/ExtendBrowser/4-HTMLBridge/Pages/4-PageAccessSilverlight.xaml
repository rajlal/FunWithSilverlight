<UserControl x:Class="HTMLBridge.PageAccessSilverlight"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="AliceBlue" Width="400" Height="300" Loaded="LayoutRoot_Loaded" >
        <Canvas Background="White" Width="300" Height="200" >
            <TextBlock x:Name="txtTitle" Text="Access Silverlight from Page" Canvas.Top="10" Canvas.Left="20" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18"></TextBlock>
            <TextBox x:Name="txtValue" Canvas.Top="60" Canvas.Left="20" Width="200" Text="RACECAR" ></TextBox>
            <Button  Canvas.Top="100" Canvas.Left="20" Width="100" Height="30" Content="Is Palindrome ?" Click="Palindrome_Click"> </Button>
            <Button  Canvas.Top="100" Canvas.Left="130" Width="90" Height="30" Content="Get Length" Click="GetLength_Click"></Button>
        </Canvas>
    </Grid>
</UserControl>
